<h1>Listing days</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Act1</th>
      <th>Act2</th>
      <th>Act3</th>
      <th>Morning</th>
      <th>Sport</th>
      <th>Meditation</th>
      <th>Mood</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @days.each do |day| %>
      <tr>
        <td><%= day.date %></td>
        <td><%= day.act1 %></td>
        <td><%= day.act2 %></td>
        <td><%= day.act3 %></td>
        <td><%= day.morning %></td>
        <td><%= day.sport %></td>
        <td><%= day.meditation %></td>
        <td><%= day.mood %></td>
        <td><%= link_to 'Show', day %></td>
        <td><%= link_to 'Edit', edit_day_path(day) %></td>
        <td><%= link_to 'Destroy', day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

